@namespace RTUB.Shared
@using RTUB.Core.Entities
@using RTUB.Core.Enums
@using RTUB.Application.Helpers
@using RTUB.Application.Extensions

@*
    ProfileHeader Component
    Displays the user's header card with avatar, display name, tuna name, role badges, and primary actions
*@

<div class="profile-header-card card mb-4">
    <div class="card-body">
        <div class="row">
            <!-- Avatar and Info Section - Centered -->
            <div class="col-12">
                <div class="text-center">
                    <!-- Avatar -->
                    <div class="profile-avatar-wrapper profile-avatar-large mx-auto mb-3">
                        <img src="@GetProfilePictureUrl()" 
                             alt="Foto de Perfil" 
                             class="profile-avatar"
                             onerror="this.onerror=null; this.src='/images/default-avatar.webp';" />
                    </div>
                    
                    <!-- Name and Badges -->
                    <div class="profile-header-info-centered">
                        @if (!string.IsNullOrEmpty(User.Nickname))
                        {
                            <h2 class="profile-display-name mb-1">@User.Nickname</h2>
                            <p class="profile-full-name text-muted mb-3">
                                @User.FirstName @User.LastName
                            </p>
                        }
                        else
                        {
                            <h2 class="profile-display-name mb-3">@GetDisplayName()</h2>
                        }
                        
                        <!-- Role Badges -->
                        <div class="profile-badges mb-3 d-flex justify-content-center flex-wrap">
                            @{
                                var displayCategories = StatusHelper.GetDisplayCategories(User);
                            }
                            @foreach (var category in displayCategories)
                            {
                                <CategoryBadge Category="category" AdditionalClasses="me-1 mb-1" />
                            }
                            @if (User.Positions.Any())
                            {
                                @foreach (var position in User.Positions)
                                {
                                    <PositionBadge Position="position" AdditionalClasses="me-1 mb-1" />
                                }
                            }
                        </div>

                        <!-- Primary Actions -->
                        <div class="d-flex gap-2 justify-content-center flex-wrap">
                            <button class="btn btn-sm btn-outline-light" @onclick="OnUploadPhoto">
                                <i class="bi bi-upload"></i> Carregar Foto
                            </button>
                            <button class="btn btn-sm btn-outline-light" @onclick="OnChangePassword">
                                <i class="bi bi-key"></i> Alterar Palavra-passe
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ApplicationUser User { get; set; } = null!;

    [Parameter]
    public int ImageRefreshTrigger { get; set; }

    [Parameter]
    public EventCallback OnChangePassword { get; set; }

    [Parameter]
    public EventCallback OnUploadPhoto { get; set; }

    private string GetProfilePictureUrl()
    {
        if (User == null) return "/images/default-avatar.webp";
        
        // Return the profile picture URL directly - let ETags handle caching (304 responses)
        return User.ProfilePictureSrc ?? "/images/default-avatar.webp";
    }

    private string GetDisplayName()
    {
        if (User == null) return "";
        return $"{User.FirstName} {User.LastName}";
    }
}
