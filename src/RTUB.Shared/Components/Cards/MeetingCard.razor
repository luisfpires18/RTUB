@namespace RTUB.Shared
@using RTUB.Core.Entities
@using RTUB.Core.Enums
@*
    MeetingCard Component
    Card for displaying meeting information with admin controls
*@

<div class="card meeting-card h-100">
    <div class="position-relative">
        @if (IsAdmin)
        {
            <div class="meeting-admin-overlay">
                <button class="btn btn-sm music-btn-edit" @onclick="HandleEdit" title="Editar">
                    <i class="bi bi-pencil music-icon-edit"></i>
                </button>
                <button class="btn btn-sm music-btn-delete" @onclick="HandleDelete" title="Eliminar">
                    <i class="bi bi-trash music-icon-delete"></i>
                </button>
            </div>
        }
        <div class="meeting-header">
            <div class="meeting-type-badge">
                <i class="bi bi-calendar3"></i>
                @GetMeetingTypeLabel()
            </div>
        </div>
    </div>
    <div class="card-body d-flex flex-column">
        <div class="meeting-status-pill @GetMeetingStatusClass()">
            @GetMeetingStatus()
        </div>
        
        <h5 class="meeting-title mb-2">@Meeting.Title</h5>
        <p class="meeting-subtitle mb-3">@GetMeetingTypeFullName()</p>
        
        <div class="meeting-info">
            <div class="meeting-info-row">
                <i class="bi bi-calendar3 meeting-icon"></i>
                <span class="meeting-text">@Meeting.Date.ToString("dd MMM yyyy") (@GetDayOfWeek(Meeting.Date))</span>
            </div>
            
            <div class="meeting-info-row">
                <i class="bi bi-clock meeting-icon"></i>
                <span class="meeting-text">@Meeting.Date.ToString("HH:mm")</span>
                @if (Meeting.Date.Date == DateTime.Today)
                {
                    <span class="meeting-today-badge">Hoje</span>
                }
            </div>
            
            @if (!string.IsNullOrEmpty(Meeting.Location))
            {
                <div class="meeting-info-row">
                    <i class="bi bi-geo-alt meeting-icon"></i>
                    <span class="meeting-text">@Meeting.Location</span>
                </div>
            }
        </div>

        <div class="mt-auto pt-3">
            <div class="meeting-footer">
                <button class="btn btn-sm btn-outline-primary meeting-details-btn" 
                        @onclick="HandleViewDetails" 
                        title="Ver Detalhes">
                    <i class="bi bi-eye-fill"></i>
                    <span>Ver Detalhes</span>
                </button>
                
                @if (IsAdmin)
                {
                    <button class="btn btn-sm meeting-email-btn" 
                            @onclick="HandleSendEmail" 
                            title="Enviar notificação da reunião">
                        <i class="bi bi-envelope-fill"></i>
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// The meeting to display
    /// </summary>
    [Parameter]
    public Meeting Meeting { get; set; } = null!;

    /// <summary>
    /// Whether the current user has admin privileges
    /// </summary>
    [Parameter]
    public bool IsAdmin { get; set; }

    /// <summary>
    /// Callback when the edit button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnEdit { get; set; }

    /// <summary>
    /// Callback when the delete button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnDelete { get; set; }

    /// <summary>
    /// Callback when the view details button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnViewDetails { get; set; }

    /// <summary>
    /// Callback when the send email button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnSendEmail { get; set; }

    private async Task HandleEdit()
    {
        if (OnEdit.HasDelegate)
        {
            await OnEdit.InvokeAsync();
        }
    }

    private async Task HandleDelete()
    {
        if (OnDelete.HasDelegate)
        {
            await OnDelete.InvokeAsync();
        }
    }

    private async Task HandleViewDetails()
    {
        if (OnViewDetails.HasDelegate)
        {
            await OnViewDetails.InvokeAsync();
        }
    }

    private async Task HandleSendEmail()
    {
        if (OnSendEmail.HasDelegate)
        {
            await OnSendEmail.InvokeAsync();
        }
    }

    private string GetMeetingTypeLabel()
    {
        return Meeting.Type switch
        {
            MeetingType.AssembleiaGeralOrdinaria => "ASSEMBLEIA GERAL ORDINÁRIA",
            MeetingType.AssembleiaGeralExtraordinaria => "ASSEMBLEIA GERAL EXTRAORDINÁRIA",
            MeetingType.ConselhoVeteranos => "CONSELHO DE VETERANOS",
            _ => ""
        };
    }

    private string GetMeetingTypeCssClass()
    {
        // All badges are now purple
        return "meeting-type-badge";
    }

    private string GetMeetingTypeFullName()
    {
        return Meeting.Type switch
        {
            MeetingType.AssembleiaGeralOrdinaria => "Assembleia Geral Ordinária",
            MeetingType.AssembleiaGeralExtraordinaria => "Assembleia Geral Extraordinária",
            MeetingType.ConselhoVeteranos => "Conselho de Veteranos",
            _ => ""
        };
    }

    private string GetMeetingStatus()
    {
        return Meeting.Date.Date < DateTime.Today ? "Realizada" : "Agendada";
    }

    private string GetMeetingStatusClass()
    {
        return Meeting.Date.Date < DateTime.Today ? "meeting-status-past" : "meeting-status-upcoming";
    }

    private string GetDayOfWeek(DateTime date)
    {
        return date.DayOfWeek switch
        {
            DayOfWeek.Monday => "Segunda",
            DayOfWeek.Tuesday => "Terça",
            DayOfWeek.Wednesday => "Quarta",
            DayOfWeek.Thursday => "Quinta",
            DayOfWeek.Friday => "Sexta",
            DayOfWeek.Saturday => "Sábado",
            DayOfWeek.Sunday => "Domingo",
            _ => ""
        };
    }
}

<style>
