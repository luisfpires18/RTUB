@using RTUB.Core.Entities
@namespace RTUB.Shared

@*
    FolderCard Component
    Displays a folder with collapsible content showing documents
*@

<div class="card folder-card mb-3">
    <div class="card-header folder-card-header" @onclick="ToggleCollapse" style="cursor: pointer;">
        <div class="d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <i class="bi @(IsExpanded ? "bi-folder2-open" : "bi-folder2") folder-icon"></i>
                <h5 class="mb-0 folder-name">@Folder.Name</h5>
                <span class="badge bg-secondary">@Folder.FileCount @(Folder.FileCount == 1 ? "ficheiro" : "ficheiros")</span>
            </div>
            <i class="bi @(IsExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
        </div>
    </div>
    
    @if (IsExpanded)
    {
        <div class="card-body folder-card-body">
            @if (IsLoading)
            {
                <div class="text-center py-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">A carregar...</span>
                    </div>
                </div>
            }
            else if (Documents.Any())
            {
                <div class="row g-3">
                    @foreach (var document in Documents)
                    {
                        <div class="col-12 col-md-6 col-lg-4">
                            <DocumentCard Document="@document"
                                        OnView="@(() => HandleDocumentView(document))"
                                        OnDownload="@(() => HandleDocumentDownload(document))" />
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center text-muted py-4">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-2">Nenhum documento nesta pasta</p>
                </div>
            }
        </div>
    }
</div>

@code {
    /// <summary>
    /// The folder to display
    /// </summary>
    [Parameter]
    public CloudflareFolder Folder { get; set; } = null!;

    /// <summary>
    /// Whether the folder should start expanded
    /// </summary>
    [Parameter]
    public bool StartExpanded { get; set; } = false;

    /// <summary>
    /// List of documents in the folder
    /// </summary>
    [Parameter]
    public List<CloudflareDocument> Documents { get; set; } = new();

    /// <summary>
    /// Whether documents are currently being loaded
    /// </summary>
    [Parameter]
    public bool IsLoading { get; set; }

    /// <summary>
    /// Callback when the folder is expanded/collapsed
    /// </summary>
    [Parameter]
    public EventCallback<bool> OnExpandedChanged { get; set; }

    /// <summary>
    /// Callback when a document view is requested
    /// </summary>
    [Parameter]
    public EventCallback<CloudflareDocument> OnDocumentView { get; set; }

    /// <summary>
    /// Callback when a document download is requested
    /// </summary>
    [Parameter]
    public EventCallback<CloudflareDocument> OnDocumentDownload { get; set; }

    private bool IsExpanded { get; set; }

    protected override void OnInitialized()
    {
        IsExpanded = StartExpanded;
    }

    private async Task ToggleCollapse()
    {
        IsExpanded = !IsExpanded;
        
        if (OnExpandedChanged.HasDelegate)
        {
            await OnExpandedChanged.InvokeAsync(IsExpanded);
        }
    }

    private async Task HandleDocumentView(CloudflareDocument document)
    {
        if (OnDocumentView.HasDelegate)
        {
            await OnDocumentView.InvokeAsync(document);
        }
    }

    private async Task HandleDocumentDownload(CloudflareDocument document)
    {
        if (OnDocumentDownload.HasDelegate)
        {
            await OnDocumentDownload.InvokeAsync(document);
        }
    }
}
