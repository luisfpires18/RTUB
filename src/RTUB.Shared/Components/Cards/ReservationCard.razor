@using RTUB.Core.Entities

<div class="card mb-3 reservation-card">
    <div class="card-body">
        <!-- Header with optional thumbnail -->
        <div class="d-flex align-items-center mb-3">
            @if (!string.IsNullOrEmpty(ProductImageUrl))
            {
                <img src="@ProductImageUrl" class="reservation-card-thumb me-2" alt="@ProductName" />
            }
            <h6 class="card-title mb-0">@ProductName</h6>
        </div>
        
        <!-- Meta pills under title -->
        <div class="mb-3">
            <span class="badge bg-purple me-2">@ProductType</span>
            <span class="badge bg-success">@ProductPrice €</span>
        </div>
        
        <!-- Details list with icons -->
        <div class="reservation-details">
            @if (!string.IsNullOrEmpty(DisplayName))
            {
                <div class="reservation-detail-item">
                    <i class="bi bi-person-badge me-2 text-primary"></i>
                    <span class="text-muted small">Apresentação:</span>
                    <span class="ms-1">@DisplayName</span>
                </div>
            }
            else
            {
                <div class="reservation-detail-item">
                    <i class="bi bi-person-badge me-2 text-muted"></i>
                    <span class="text-muted small">Apresentação:</span>
                    <span class="ms-1 text-muted">—</span>
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Size))
            {
                <div class="reservation-detail-item">
                    <i class="bi bi-rulers me-2 text-primary"></i>
                    <span class="text-muted small">Tamanho:</span>
                    <span class="ms-1">@Size</span>
                </div>
            }
            else
            {
                <div class="reservation-detail-item">
                    <i class="bi bi-rulers me-2 text-muted"></i>
                    <span class="text-muted small">Tamanho:</span>
                    <span class="ms-1 text-muted">—</span>
                </div>
            }
            
            <div class="reservation-detail-item">
                <i class="bi bi-calendar-check me-2 text-primary"></i>
                <span class="text-muted small">Reservado em:</span>
                <span class="ms-1">@ReservationDate</span>
            </div>
            
            @if (!string.IsNullOrEmpty(Username))
            {
                <div class="reservation-detail-item">
                    <i class="bi bi-person me-2 text-primary"></i>
                    <span class="text-muted small">Utilizador:</span>
                    <span class="ms-1">@Username</span>
                </div>
            }
        </div>
        
        @if (ShowDeleteButton)
        {
            <hr class="my-2" />
            <button class="btn btn-sm btn-danger w-100" @onclick="OnDelete">
                <i class="bi bi-trash"></i> Eliminar Reserva
            </button>
        }
    </div>
</div>

@code {
    [Parameter]
    public string ProductName { get; set; } = string.Empty;
    
    [Parameter]
    public string ProductType { get; set; } = string.Empty;
    
    [Parameter]
    public string ProductPrice { get; set; } = string.Empty;
    
    [Parameter]
    public string Username { get; set; } = string.Empty;
    
    [Parameter]
    public string? DisplayName { get; set; }
    
    [Parameter]
    public string? Size { get; set; }
    
    [Parameter]
    public string ReservationDate { get; set; } = string.Empty;
    
    [Parameter]
    public bool ShowDeleteButton { get; set; }
    
    [Parameter]
    public EventCallback OnDelete { get; set; }
    
    [Parameter]
    public string? ProductImageUrl { get; set; }
}
