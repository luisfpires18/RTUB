@namespace RTUB.Shared
@using RTUB.Core.Entities

<div class="card logistics-board-card h-100">
    <div class="position-relative">
        @if (ShowActions)
        {
            <div class="position-absolute top-0 end-0 p-2" style="z-index: 10;">
                <div class="d-flex gap-1">
                    <button class="btn btn-sm btn-outline-light" style="padding: 0.15rem 0.3rem;" 
                            @onclick="() => OnEdit.InvokeAsync(Board)" 
                            @onclick:stopPropagation="true"
                            title="Editar">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-danger" style="padding: 0.15rem 0.3rem;" 
                            @onclick="() => OnDelete.InvokeAsync(Board)" 
                            @onclick:stopPropagation="true"
                            title="Eliminar">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>
        }
    </div>
    <div class="card-body d-flex flex-column">
        <h5 class="card-title mb-2">@Board.Name</h5>
        
        @if (!string.IsNullOrWhiteSpace(Board.Description))
        {
            <p class="card-text text-light-theme small mb-2">@Board.Description</p>
        }
        
        @if (Board.Event != null)
        {
            <span class="badge bg-primary mb-2" style="width: fit-content;">
                <i class="bi bi-calendar-event"></i> @Board.Event.Name
            </span>
        }
        
        <div class="mt-auto">
            <button class="btn btn-sm btn-primary" @onclick="(() => OnView.InvokeAsync(Board))" style="width: auto;">
                <i class="bi bi-kanban"></i> Abrir Quadro
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public LogisticsBoard Board { get; set; } = null!;

    [Parameter]
    public bool ShowActions { get; set; } = true;

    [Parameter]
    public EventCallback<LogisticsBoard> OnView { get; set; }

    [Parameter]
    public EventCallback<LogisticsBoard> OnEdit { get; set; }

    [Parameter]
    public EventCallback<LogisticsBoard> OnDelete { get; set; }
}
