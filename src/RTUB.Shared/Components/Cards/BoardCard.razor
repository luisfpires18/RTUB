@namespace RTUB.Shared
@using RTUB.Core.Entities

<div class="card logistics-board-card h-100">
    <div class="card-body d-flex flex-column">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h5 class="card-title mb-0">@Board.Name</h5>
            @if (ShowActions)
            {
                <div class="dropdown">
                    <button class="btn btn-sm btn-link text-light p-0" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" @onclick="(() => OnEdit.InvokeAsync(Board))" @onclick:preventDefault>
                            <i class="bi bi-pencil"></i> Editar
                        </a></li>
                        <li><a class="dropdown-item text-danger" href="#" @onclick="(() => OnDelete.InvokeAsync(Board))" @onclick:preventDefault>
                            <i class="bi bi-trash"></i> Eliminar
                        </a></li>
                    </ul>
                </div>
            }
        </div>
        
        @if (!string.IsNullOrWhiteSpace(Board.Description))
        {
            <p class="card-text text-light-theme small mb-2">@Board.Description</p>
        }
        
        @if (Board.Event != null)
        {
            <div class="badge bg-primary mb-2">
                <i class="bi bi-calendar-event"></i> @Board.Event.Name
            </div>
        }
        
        <div class="mt-auto">
            <button class="btn btn-sm btn-primary w-100" @onclick="(() => OnView.InvokeAsync(Board))">
                <i class="bi bi-kanban"></i> Abrir Quadro
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public LogisticsBoard Board { get; set; } = null!;

    [Parameter]
    public bool ShowActions { get; set; } = true;

    [Parameter]
    public EventCallback<LogisticsBoard> OnView { get; set; }

    [Parameter]
    public EventCallback<LogisticsBoard> OnEdit { get; set; }

    [Parameter]
    public EventCallback<LogisticsBoard> OnDelete { get; set; }
}
