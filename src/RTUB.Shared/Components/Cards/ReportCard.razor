@namespace RTUB.Shared
@using Microsoft.AspNetCore.Components.Authorization
@*
    ReportCard Component
    Reusable card for displaying financial report information with role-based actions
*@

<div class="card report-card h-100" style="cursor: pointer;" @onclick="HandleCardClick">
    <div class="card-body d-flex flex-column p-3">
        <h5 class="card-title mb-2">@Report.Title</h5>
        <p class="card-text text-light-theme mb-2">
            <small>
                <i class="bi bi-calendar me-1"></i>
                Ano Letivo: @($"{Report.Year}-{Report.Year + 1}")
            </small>
        </p>
        
        <!-- Square Stat Tiles -->
        <div class="stat-tiles-container mb-3">
            <div class="stat-tile" 
                 role="region" 
                 aria-label="Receitas: €@Report.TotalIncome.ToString("N2")"
                 tabindex="0">
                <div class="stat-title">Receitas</div>
                <div class="stat-value text-success">€@Report.TotalIncome.ToString("N2")</div>
            </div>
            <div class="stat-tile" 
                 role="region" 
                 aria-label="Despesas: €@Report.TotalExpenses.ToString("N2")"
                 tabindex="0">
                <div class="stat-title">Despesas</div>
                <div class="stat-value text-danger">€@Report.TotalExpenses.ToString("N2")</div>
            </div>
            <div class="stat-tile" 
                 role="region" 
                 aria-label="Saldo: €@Report.FinalBalance.ToString("N2")"
                 tabindex="0">
                <div class="stat-title">Saldo</div>
                <div class="stat-value @(Report.FinalBalance >= 0 ? "text-success" : "text-danger")">
                    @if (Report.FinalBalance >= 0)
                    {
                        <i class="bi bi-caret-up-fill stat-icon"></i>
                    }
                    else
                    {
                        <i class="bi bi-caret-down-fill stat-icon"></i>
                    }
                    €@Report.FinalBalance.ToString("N2")
                </div>
            </div>
        </div>

        <!-- Estado Badge -->
        <div class="mb-3">
            @if (Report.IsCurrentFiscalYear())
            {
                <span class="badge badge-position me-2">Ano atual</span>
            }
            @if (Report.IsPublished)
            {
                <span class="badge bg-success">Publicado</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Rascunho</span>
            }
        </div>

        <!-- Actions Row - Right aligned, compact -->
        <div class="d-flex gap-2 justify-content-end mt-auto" @onclick:stopPropagation="true">
            @if (IsAdmin)
            {
                <button class="btn btn-sm btn-purple" 
                        @onclick="HandleDownload" 
                        @onclick:stopPropagation="true"
                        title="Download PDF"
                        aria-label="Download PDF do relatório @Report.Title">
                    <i class="bi bi-download"></i>
                </button>
            }
            
            @if (IsOwner && !Report.IsPublished)
            {
                <button class="btn btn-sm btn-success" 
                        @onclick="HandlePublish" 
                        @onclick:stopPropagation="true"
                        title="Publicar Relatório"
                        aria-label="Publicar relatório @Report.Title">
                    <i class="bi bi-check-circle"></i>
                </button>
                <button class="btn btn-sm btn-danger" 
                        @onclick="HandleDelete" 
                        @onclick:stopPropagation="true"
                        title="Eliminar Relatório"
                        aria-label="Eliminar relatório @Report.Title">
                    <i class="bi bi-trash"></i>
                </button>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Report Report { get; set; } = null!;

    [Parameter]
    public bool IsAdmin { get; set; }

    [Parameter]
    public bool IsOwner { get; set; }

    [Parameter]
    public EventCallback<Report> OnCardClick { get; set; }

    [Parameter]
    public EventCallback<Report> OnDownload { get; set; }

    [Parameter]
    public EventCallback<Report> OnPublish { get; set; }

    [Parameter]
    public EventCallback<Report> OnDelete { get; set; }
    
    private async Task HandleCardClick()
    {
        await OnCardClick.InvokeAsync(Report);
    }
    
    private async Task HandleDownload()
    {
        await OnDownload.InvokeAsync(Report);
    }
    
    private async Task HandlePublish()
    {
        await OnPublish.InvokeAsync(Report);
    }
    
    private async Task HandleDelete()
    {
        await OnDelete.InvokeAsync(Report);
    }
}
