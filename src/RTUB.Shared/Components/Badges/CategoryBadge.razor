@namespace RTUB.Shared
@using RTUB.Core.Enums
@using RTUB.Application.Helpers

@*
    CategoryBadge Component
    Displays a Bootstrap badge with the appropriate styling for a MemberCategory
*@

<span class="badge @StatusHelper.GetCategoryBadgeClass(Category) @AdditionalClasses">
    @StatusHelper.GetCategoryDisplay(Category)
</span>

@code {
    /// <summary>
    /// The member category to display
    /// </summary>
    [Parameter]
    public MemberCategory Category { get; set; }

    /// <summary>
    /// Additional CSS classes to apply to the badge
    /// </summary>
    [Parameter]
    public string AdditionalClasses { get; set; } = "";
}
