@namespace RTUB.Shared
@using RTUB.Core.Entities

<div class="post-card" 
     tabindex="0" 
     @onclick="HandleClick" 
     @onkeydown="HandleKeyDown"
     role="button"
     aria-label="@($"Post: {Post.Title}")">
    
    <!-- Left side: Author avatar and info -->
    <div class="post-card-avatar-section">
        <img src="@(Post.Author.ProfilePictureSrc)" 
             class="post-card-avatar" 
             alt="@(Post.Author.Nickname ?? Post.Author.UserName)" />
        <div class="post-card-author-info">
            <div class="post-card-author-name">@(Post.Author.Nickname ?? Post.Author.UserName)</div>
            <small class="post-card-date">@Post.CreatedAt.ToString("dd MMM yyyy")</small>
        </div>
        
        @if (CanEdit || CanPin || CanLock || CanDelete)
        {
            <div class="post-card-admin-overlay">
                @if (CanEdit)
                {
                    <button class="btn btn-sm btn-outline-secondary" 
                            @onclick="HandleEdit" 
                            @onclick:stopPropagation="true"
                            title="Editar">
                        <i class="bi bi-pencil"></i>
                    </button>
                }
                @if (CanPin)
                {
                    <button class="btn btn-sm @(Post.IsPinned ? "btn-warning" : "btn-outline-warning")" 
                            @onclick="HandlePin" 
                            @onclick:stopPropagation="true"
                            title="@(Post.IsPinned ? "Desafixar" : "Fixar")">
                        <i class="bi bi-pin-angle-fill"></i>
                    </button>
                }
                @if (CanLock)
                {
                    <button class="btn btn-sm @(Post.IsLocked ? "btn-danger" : "btn-outline-danger")" 
                            @onclick="HandleLock" 
                            @onclick:stopPropagation="true"
                            title="@(Post.IsLocked ? "Desbloquear" : "Bloquear")">
                        <i class="bi @(Post.IsLocked ? "bi-unlock-fill" : "bi-lock-fill")"></i>
                    </button>
                }
                @if (CanDelete)
                {
                    <button class="btn btn-sm btn-outline-danger" 
                            @onclick="HandleDelete" 
                            @onclick:stopPropagation="true"
                            title="Eliminar">
                        <i class="bi bi-trash"></i>
                    </button>
                }
            </div>
        }
    </div>
    
    <!-- Right side: Post content -->
    <div class="post-card-content">
        <div class="post-card-header">
            <h5 class="post-card-title">
                @Post.Title
            </h5>
            <div class="post-card-badges">
                @if (Post.IsPinned)
                {
                    <span class="badge bg-warning text-dark">
                        <i class="bi bi-pin-angle-fill"></i> Fixado
                    </span>
                }
                @if (Post.IsLocked)
                {
                    <span class="badge bg-danger">
                        <i class="bi bi-lock-fill"></i> Bloqueado
                    </span>
                }
            </div>
        </div>
        
        <p class="post-card-body">
            @if (Post.Body.Length > 200)
            {
                @Post.Body.Substring(0, 200)<text>...</text>
            }
            else
            {
                @Post.Body
            }
        </p>
        
        <div class="post-card-meta">
            <span class="post-card-meta-item">
                <i class="bi bi-chat-left-dots"></i>
                @Post.Comments.Count coment√°rios
            </span>
            <span class="post-card-meta-item">
                <i class="bi bi-clock"></i>
                @Post.LastActivityAt.ToString("dd MMM, HH:mm")
            </span>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public Post Post { get; set; } = null!;

    [Parameter]
    public bool CanEdit { get; set; }

    [Parameter]
    public bool CanPin { get; set; }

    [Parameter]
    public bool CanLock { get; set; }

    [Parameter]
    public bool CanDelete { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public EventCallback OnEdit { get; set; }

    [Parameter]
    public EventCallback OnPin { get; set; }

    [Parameter]
    public EventCallback OnLock { get; set; }

    [Parameter]
    public EventCallback OnDelete { get; set; }

    private async Task HandleClick()
    {
        if (OnClick.HasDelegate)
        {
            await OnClick.InvokeAsync();
        }
    }

    private async Task HandleEdit()
    {
        if (OnEdit.HasDelegate)
        {
            await OnEdit.InvokeAsync();
        }
    }

    private async Task HandlePin()
    {
        if (OnPin.HasDelegate)
        {
            await OnPin.InvokeAsync();
        }
    }

    private async Task HandleLock()
    {
        if (OnLock.HasDelegate)
        {
            await OnLock.InvokeAsync();
        }
    }

    private async Task HandleDelete()
    {
        if (OnDelete.HasDelegate)
        {
            await OnDelete.InvokeAsync();
        }
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" || e.Key == " ")
        {
            await HandleClick();
        }
    }
}
