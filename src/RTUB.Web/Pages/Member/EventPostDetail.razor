@page "/events/{eventId:int}/discussion/{postId:int}"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using RTUB.Application.Interfaces
@using RTUB.Core.Entities
@inject IEventService EventService
@inject IPostService PostService
@inject ICommentService CommentService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>@(post?.Title ?? "Post") - Discussão</PageTitle>

<div class="post-detail-page-wrapper">
    @if (post == null)
    {
        <div class="post-detail-container">
            <LoadingSpinner />
        </div>
    }
    else
    {
        <!-- Page Header -->
        <div class="post-detail-page-header">
            <div class="post-detail-container">
                <div class="d-flex align-items-start">
                    <button class="btn btn-outline-secondary me-3" @onclick="NavigateBack">
                        <i class="bi bi-arrow-left"></i>
                    </button>
                    <div class="flex-grow-1">
                        <h2 class="mb-2">@post.Title</h2>
                        <div class="post-badges">
                            @if (post.IsPinned)
                            {
                                <span class="badge bg-warning text-dark me-2">
                                    <i class="bi bi-pin-angle-fill"></i> Fixado
                                </span>
                            }
                            @if (post.IsLocked)
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-lock-fill"></i> Bloqueado
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="post-detail-container">
            <!-- Post Content Card -->
            <div class="card post-content-card mb-4">
                <div class="card-body">
                    <!-- Author Info -->
                    <div class="post-author-info mb-3 pb-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <img src="@(post.Author.ProfilePictureSrc)" 
                                 class="rounded-circle me-3" 
                                 alt="@(post.Author.Nickname ?? post.Author.UserName)" 
                                 style="width: 48px; height: 48px; object-fit: cover;" />
                            <div class="flex-grow-1">
                                <div class="fw-bold text-light">@(post.Author.Nickname ?? post.Author.UserName)</div>
                                <small class="text-muted">
                                    <i class="bi bi-clock me-1"></i>
                                    @post.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                                    @if (post.IsEdited)
                                    {
                                        <span class="ms-1">(editado)</span>
                                    }
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Post Body -->
                    <div class="post-body-content">
                        <p class="mb-0" style="white-space: pre-line; line-height: 1.6;">@post.Body</p>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="comments-section-wrapper">
                <div class="comments-header mb-3">
                    <h4 class="mb-0">
                        <i class="bi bi-chat-left-text me-2"></i>Comentários (@totalComments)
                    </h4>
                </div>

                @if (comments.Count == 0)
                {
                    <EmptyState Title="Nenhum comentário ainda" 
                               Message="Seja o primeiro a comentar neste post!" 
                               Icon="bi-chat-left-text" />
                }
                else
                {
                    <div class="comments-list">
                        @foreach (var comment in comments)
                        {
                            <CommentItem Comment="@comment" 
                                        CanEdit="@(IsAuthor(comment) || isAdmin)"
                                        CanDelete="@isAdmin"
                                        OnEdit="@(() => EditComment(comment))"
                                        OnDelete="@(() => DeleteComment(comment))" />
                        }
                    </div>

                    @if (totalComments > pageSize)
                    {
                        <div class="pagination-wrapper mt-4">
                            <TablePagination CurrentPage="@currentPage"
                                            PageSize="@pageSize"
                                            TotalItems="@totalComments"
                                            ItemLabel="comentários"
                                            PageSizeOptions="@(new[] { 50, 100 })"
                                            OnPageChanged="@HandlePageChange"
                                            OnPageSizeChanged="@HandlePageSizeChange" />
                        </div>
                    }
                }
            </div>

            <!-- Comment Composer -->
            @if (!post.IsLocked && canCreateComment)
            {
                <div class="card comment-composer-card mt-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-chat-square-text me-2"></i>Adicionar Comentário
                        </h5>
                        <CommentComposer OnSubmit="CreateComment" />
                    </div>
                </div>
            }
            else if (post.IsLocked)
            {
                <div class="alert alert-warning mt-4 d-flex align-items-center">
                    <i class="bi bi-lock-fill me-2"></i>
                    <span>Este post está bloqueado. Não é possível adicionar novos comentários.</span>
                </div>
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public int EventId { get; set; }

    [Parameter]
    public int PostId { get; set; }

    private Post? post;
    private List<Comment> comments = new();
    private ApplicationUser? currentUser;
    private bool isAdmin = false;
    private bool canCreateComment = false;
    private int currentPage = 1;
    private int pageSize = 50;
    private int totalComments = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentUserAsync();
        await LoadPostAsync();
        await LoadCommentsAsync();
    }

    private async Task LoadCurrentUserAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (!string.IsNullOrEmpty(userName))
        {
            currentUser = await UserManager.FindByNameAsync(userName);
            isAdmin = authState.User.IsInRole("Admin") || authState.User.IsInRole("Owner");
            canCreateComment = currentUser != null;
        }
    }

    private async Task LoadPostAsync()
    {
        post = await PostService.GetByIdAsync(PostId);
    }

    private async Task LoadCommentsAsync()
    {
        if (post == null) return;

        totalComments = await CommentService.GetCountByPostIdAsync(PostId);
        var loadedComments = await CommentService.GetByPostIdAsync(PostId, currentPage, pageSize);
        comments = loadedComments.ToList();
    }

    private async Task CreateComment(string body)
    {
        if (post == null || currentUser == null || post.IsLocked) return;

        await CommentService.CreateAsync(PostId, currentUser.Id, body);
        await LoadCommentsAsync();
        StateHasChanged();
    }

    private bool IsAuthor(Comment comment)
    {
        return currentUser != null && comment.AuthorId == currentUser.Id;
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo($"/events/{EventId}/discussion");
    }

    private async Task HandlePageChange(int newPage)
    {
        currentPage = newPage;
        await LoadCommentsAsync();
    }

    private async Task HandlePageSizeChange(int newPageSize)
    {
        pageSize = newPageSize;
        currentPage = 1;
        await LoadCommentsAsync();
    }

    private async Task EditComment(Comment comment)
    {
        // TODO: Implement edit modal
        await Task.CompletedTask;
    }

    private async Task DeleteComment(Comment comment)
    {
        await CommentService.SoftDeleteAsync(comment.Id);
        await LoadCommentsAsync();
    }
}
