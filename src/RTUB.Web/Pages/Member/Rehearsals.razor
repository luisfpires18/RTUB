    private async Task CreateRangeRehearsals()
    {
        try
        {
            var currentDate = rangeStartDate;
            int created = 0;
            int skipped = 0;
            
            while (currentDate <= rangeEndDate)
            {
                // Tuesday = 2, Thursday = 4
                if (currentDate.DayOfWeek == DayOfWeek.Tuesday || currentDate.DayOfWeek == DayOfWeek.Thursday)
                {
                    // Check if rehearsal already exists on this date
                    var existingRehearsal = await RehearsalService.GetRehearsalByDateAsync(currentDate);
                    if (existingRehearsal == null)
                    {
                        await RehearsalService.CreateRehearsalAsync(currentDate, rangeLocation, rangeTheme);
                        created++;
                    }
                    else
                    {
                        skipped++;
                        Console.WriteLine($"Skipped {currentDate.ToString("dd/MM/yyyy")} - rehearsal already exists");
                    }
                }
                currentDate = currentDate.AddDays(1);
            }

            Console.WriteLine($"Created {created} rehearsals, skipped {skipped} duplicates");
            await LoadData();
            CloseDateRangeModal();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error creating range rehearsals: {ex.Message}");
        }
    }

