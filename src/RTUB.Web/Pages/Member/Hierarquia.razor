@page "/member/hierarquia"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using RTUB.Application.Helpers
@using RTUB.Application.Extensions
@attribute [Authorize]
@inject UserManager<ApplicationUser> UserManager
@inject IJSRuntime JSRuntime

<h1 class="text-center mb-4">Hierarquia da Tuna - Família</h1>
<p class="text-center mb-4">Árvore genealógica dos membros mostrando a relação Padrinho-Afilhado</p>

@if (isLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-purple" role="status">
            <span class="visually-hidden">A carregar...</span>
        </div>
    </div>
}
else if (!members.Any())
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle"></i> Nenhum membro encontrado.
    </div>
}
else
{
    <div class="family-tree-controls">
        <button @onclick="ZoomOut" title="Zoom Out" aria-label="Diminuir zoom">
            <i class="bi bi-dash-lg"></i>
        </button>
        <span class="zoom-level">@($"{currentZoom}%")</span>
        <button @onclick="ZoomIn" title="Zoom In" aria-label="Aumentar zoom">
            <i class="bi bi-plus-lg"></i>
        </button>
        <button @onclick="ResetZoom" title="Reset Zoom" aria-label="Repor zoom">
            <i class="bi bi-arrow-counterclockwise"></i>
        </button>
    </div>
    
    <div class="family-tree-container" @ref="treeContainer" 
         @onwheel="HandleWheel"
         @ontouchstart="HandleTouchStart"
         @ontouchmove="HandleTouchMove"
         @ontouchend="HandleTouchEnd"
         @onmousedown="HandleMouseDown"
         @onmousemove="HandleMouseMove"
         @onmouseup="HandleMouseUp"
         @onmouseleave="HandleMouseLeave">
        <div class="family-tree-viewport" style="transform: scale(@(currentZoom / 100.0)) translate(@(panX)px, @(panY)px);">
            @* Root level - members without mentors *@
            <div class="tree-level">
                @foreach (var rootMember in rootMembers)
                {
                    <div class="tree-node-wrapper">
                        @RenderMemberNode(rootMember)
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<ApplicationUser> members = new();
    private List<ApplicationUser> rootMembers = new();
    private Dictionary<string, List<ApplicationUser>> mentorToAfilhados = new();
    private bool isLoading = true;
    
    // Zoom and pan state
    private ElementReference treeContainer;
    private int currentZoom = 100;
    private const int MinZoom = 50;
    private const int MaxZoom = 200;
    private const int ZoomStep = 10;
    private const int LeftMouseButton = 0;
    private const double MinPinchScaleThreshold = 0.1;
    private double panX = 0;
    private double panY = 0;
    
    // Pan/drag state
    private bool isDragging = false;
    private double startX = 0;
    private double startY = 0;
    private double lastPanX = 0;
    private double lastPanY = 0;
    
    // Touch state for pinch-to-zoom
    private bool isPinching = false;
    private double initialPinchDistance = 0;
    private int initialPinchZoom = 100;

    protected override void OnInitialized()
    {
        LoadMembersAndBuildHierarchy();
        isLoading = false;
    }

    private void LoadMembersAndBuildHierarchy()
    {
        // Load all members excluding Leitões (only show Caloiro, Tuno, Veterano, Tunossauro)
        // Must load to memory first before using IsEffectiveMember() extension method
        members = UserManager.Users
            .ToList()
            .Where(u => u.IsEffectiveMember())
            .OrderBy(u => u.FirstName)
            .ThenBy(u => u.LastName)
            .ToList();

        // Build mentor-to-afilhados mapping
        // Only include mentors who are Tunos (not Caloiros)
        mentorToAfilhados.Clear();
        foreach (var member in members)
        {
            if (!string.IsNullOrEmpty(member.MentorId))
            {
                // Get the mentor
                var mentor = members.FirstOrDefault(m => m.Id == member.MentorId);
                
                // Only add if mentor is Tuno, Veterano, or Tunossauro (not Caloiro)
                if (mentor != null && mentor.IsTunoOrHigher())
                {
                    if (!mentorToAfilhados.ContainsKey(member.MentorId))
                    {
                        mentorToAfilhados[member.MentorId] = new List<ApplicationUser>();
                    }
                    mentorToAfilhados[member.MentorId].Add(member);
                }
            }
        }

        // Find root members (those without mentors or whose mentor is not in the displayed list or not a valid Tuno mentor)
        rootMembers = members
            .Where(m => 
            {
                if (string.IsNullOrEmpty(m.MentorId))
                    return true;
                    
                var mentor = members.FirstOrDefault(mem => mem.Id == m.MentorId);
                
                // Include as root if mentor doesn't exist OR mentor is not a Tuno/Veterano/Tunossauro
                return mentor == null || !mentor.IsTunoOrHigher();
            })
            .OrderBy(m => m.FirstName)
            .ThenBy(m => m.LastName)
            .ToList();
    }

    // Zoom controls
    private void ZoomIn()
    {
        if (currentZoom < MaxZoom)
        {
            currentZoom += ZoomStep;
            StateHasChanged();
        }
    }

    private void ZoomOut()
    {
        if (currentZoom > MinZoom)
        {
            currentZoom -= ZoomStep;
            StateHasChanged();
        }
    }

    private void ResetZoom()
    {
        currentZoom = 100;
        panX = 0;
        panY = 0;
        StateHasChanged();
    }

    // Mouse wheel zoom handler
    private void HandleWheel(WheelEventArgs e)
    {
        if (e.DeltaY < 0)
        {
            ZoomIn();
        }
        else if (e.DeltaY > 0)
        {
            ZoomOut();
        }
    }

    // Mouse pan handlers
    private void HandleMouseDown(MouseEventArgs e)
    {
        // Only start dragging on left mouse button
        if (e.Button == LeftMouseButton)
        {
            isDragging = true;
            startX = e.ClientX;
            startY = e.ClientY;
            lastPanX = panX;
            lastPanY = panY;
        }
    }

    private void HandleMouseMove(MouseEventArgs e)
    {
        if (isDragging)
        {
            var deltaX = e.ClientX - startX;
            var deltaY = e.ClientY - startY;
            panX = lastPanX + deltaX;
            panY = lastPanY + deltaY;
            StateHasChanged();
        }
    }

    private void HandleMouseUp(MouseEventArgs e)
    {
        isDragging = false;
    }

    private void HandleMouseLeave(MouseEventArgs e)
    {
        isDragging = false;
    }

    // Touch handlers for mobile
    private void HandleTouchStart(TouchEventArgs e)
    {
        if (e.Touches.Length == 1)
        {
            // Single touch - start panning
            isDragging = true;
            startX = e.Touches[0].ClientX;
            startY = e.Touches[0].ClientY;
            lastPanX = panX;
            lastPanY = panY;
        }
        else if (e.Touches.Length == 2)
        {
            // Two touches - start pinching
            isPinching = true;
            isDragging = false;
            var dx = e.Touches[0].ClientX - e.Touches[1].ClientX;
            var dy = e.Touches[0].ClientY - e.Touches[1].ClientY;
            initialPinchDistance = Math.Sqrt(dx * dx + dy * dy);
            initialPinchZoom = currentZoom;
        }
    }

    private void HandleTouchMove(TouchEventArgs e)
    {
        if (isPinching && e.Touches.Length == 2)
        {
            // Handle pinch-to-zoom
            var dx = e.Touches[0].ClientX - e.Touches[1].ClientX;
            var dy = e.Touches[0].ClientY - e.Touches[1].ClientY;
            var currentDistance = Math.Sqrt(dx * dx + dy * dy);
            
            var scale = currentDistance / initialPinchDistance;
            
            // Only apply zoom if the scale change is significant enough to prevent jittery behavior
            if (Math.Abs(scale - 1.0) > MinPinchScaleThreshold)
            {
                var newZoom = (int)(initialPinchZoom * scale);
                
                // Clamp zoom level
                currentZoom = Math.Max(MinZoom, Math.Min(MaxZoom, newZoom));
                StateHasChanged();
            }
        }
        else if (isDragging && e.Touches.Length == 1)
        {
            // Handle single-touch panning
            var deltaX = e.Touches[0].ClientX - startX;
            var deltaY = e.Touches[0].ClientY - startY;
            panX = lastPanX + deltaX;
            panY = lastPanY + deltaY;
            StateHasChanged();
        }
    }

    private void HandleTouchEnd(TouchEventArgs e)
    {
        if (e.Touches.Length < 2)
        {
            isPinching = false;
        }
        if (e.Touches.Length == 0)
        {
            isDragging = false;
        }
    }

    private RenderFragment RenderMemberNode(ApplicationUser member) => __builder =>
    {
        <div class="member-node">
            <div class="member-card">
                <img src="@member.ProfilePictureSrc" 
                     alt="@member.GetDisplayName()" 
                     class="member-avatar-medium mb-2"
                     title="@member.GetDisplayName()" />
                <div class="member-info">
                    @if (!string.IsNullOrEmpty(member.Nickname))
                    {
                        <div class="member-name">@member.Nickname</div>
                        <div class="member-nickname">@member.FirstName @member.LastName</div>
                    }
                    else
                    {
                        <div class="member-name">@member.FirstName @member.LastName</div>
                    }
                </div>
            </div>

            @* Show afilhados (children) if this member has any *@
            @if (mentorToAfilhados.ContainsKey(member.Id) && mentorToAfilhados[member.Id].Any())
            {
                <div class="children-connector"></div>
                <div class="children-container">
                    @foreach (var afilhado in mentorToAfilhados[member.Id].OrderBy(a => a.FirstName).ThenBy(a => a.LastName))
                    {
                        <div class="child-node">
                            @RenderMemberNode(afilhado)
                        </div>
                    }
                </div>
            }
        </div>
    };
}
