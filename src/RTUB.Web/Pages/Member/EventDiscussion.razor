@page "/events/{eventId:int}/discussion"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using RTUB.Application.Interfaces
@using RTUB.Core.Entities
@inject IEventService EventService
@inject IDiscussionService DiscussionService
@inject IPostService PostService
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager Navigation

<PageTitle>Discussão - @(eventItem?.Name ?? "Evento")</PageTitle>

<div class="discussion-page-wrapper">
    @if (eventItem == null)
    {
        <div class="discussion-container">
            <LoadingSpinner />
        </div>
    }
    else
    {
        <!-- Page Header -->
        <div class="discussion-page-header">
            <div class="discussion-container">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center flex-grow-1">
                        <button class="btn btn-outline-secondary me-3" @onclick="NavigateBack">
                            <i class="bi bi-arrow-left"></i>
                        </button>
                        <div>
                            <h2 class="mb-1">Discussão</h2>
                            <p class="text-muted mb-0">@eventItem.Name</p>
                        </div>
                    </div>
                    @if (canCreatePost)
                    {
                        <button class="btn btn-success btn-create-post" @onclick="OpenCreatePostModal" title="Criar Novo Post">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="discussion-container">
            <!-- Search Bar -->
            <div class="search-bar-wrapper mb-4">
                <div class="input-group">
                    <span class="input-group-text bg-transparent">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" 
                           class="form-control" 
                           placeholder="Pesquisar posts por título, conteúdo ou autor..." 
                           @bind="searchTerm" 
                           @bind:event="oninput" 
                           @onkeyup="HandleSearch" />
                </div>
            </div>

            <!-- Posts Section -->
            <div class="posts-section">
                @if (posts == null)
                {
                    <LoadingSpinner />
                }
                else if (posts.Count == 0)
                {
                    <EmptyState Title="Nenhum post encontrado" 
                               Message="@(string.IsNullOrWhiteSpace(searchTerm) ? "Seja o primeiro a iniciar uma discussão sobre este evento!" : "Nenhum resultado encontrado para a sua pesquisa.")" 
                               Icon="bi-chat-dots" />
                }
                else
                {
                    <div class="posts-list">
                        @foreach (var post in posts)
                        {
                            <PostCard Post="@post" 
                                     CanEdit="@(IsAuthor(post) || isAdmin)"
                                     CanPin="@isAdmin"
                                     CanLock="@isAdmin"
                                     CanDelete="@isAdmin"
                                     OnClick="@(() => NavigateToPost(post.Id))"
                                     OnEdit="@(() => EditPost(post))"
                                     OnPin="@(() => TogglePin(post))"
                                     OnLock="@(() => ToggleLock(post))"
                                     OnDelete="@(() => DeletePost(post))" />
                        }
                    </div>

                    @if (totalPosts > pageSize)
                    {
                        <div class="pagination-wrapper mt-4">
                            <TablePagination CurrentPage="@currentPage"
                                            PageSize="@pageSize"
                                            TotalItems="@totalPosts"
                                            ItemLabel="posts"
                                            PageSizeOptions="@(new[] { 20, 50, 100 })"
                                            OnPageChanged="@HandlePageChange"
                                            OnPageSizeChanged="@HandlePageSizeChange" />
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

<!-- Create Post Modal -->
<Modal Show="@showCreatePostModal" 
       ShowChanged="@((show) => showCreatePostModal = show)"
       Title="Criar Novo Post"
       Size="Modal.ModalSize.Large"
       Centered="true">
    <BodyContent>
        <PostComposer OnSubmit="@(async (tuple) => await CreatePost(tuple.Item1, tuple.Item2))" />
    </BodyContent>
</Modal>

@code {
    [Parameter]
    public int EventId { get; set; }

    private Event? eventItem;
    private Discussion? discussion;
    private List<Post> posts = new();
    private ApplicationUser? currentUser;
    private bool isAdmin = false;
    private bool canCreatePost = false;
    private string searchTerm = string.Empty;
    private int currentPage = 1;
    private int pageSize = 20;
    private int totalPosts = 0;
    private bool showCreatePostModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadEventAsync();
        await LoadCurrentUserAsync();
        await LoadDiscussionAsync();
        await LoadPostsAsync();
    }

    private async Task LoadEventAsync()
    {
        eventItem = await EventService.GetEventByIdAsync(EventId);
    }

    private async Task LoadCurrentUserAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var userName = authState.User.Identity?.Name;

        if (!string.IsNullOrEmpty(userName))
        {
            currentUser = await UserManager.FindByNameAsync(userName);
            isAdmin = authState.User.IsInRole("Admin") || authState.User.IsInRole("Owner");
            canCreatePost = currentUser != null;
        }
    }

    private async Task LoadDiscussionAsync()
    {
        if (eventItem == null) return;
        discussion = await DiscussionService.GetOrCreateForEventAsync(EventId);
    }

    private async Task LoadPostsAsync()
    {
        if (discussion == null) return;

        totalPosts = await PostService.GetCountByDiscussionIdAsync(discussion.Id, searchTerm);
        var loadedPosts = await PostService.GetByDiscussionIdAsync(
            discussion.Id, 
            currentPage, 
            pageSize, 
            searchTerm
        );
        posts = loadedPosts.ToList();
    }

    private async Task CreatePost(string title, string body)
    {
        if (discussion == null || currentUser == null) return;

        await PostService.CreateAsync(discussion.Id, currentUser.Id, title, body);
        await LoadPostsAsync();
        showCreatePostModal = false;
        StateHasChanged();
    }

    private void OpenCreatePostModal()
    {
        showCreatePostModal = true;
    }

    private bool IsAuthor(Post post)
    {
        return currentUser != null && post.AuthorId == currentUser.Id;
    }

    private void NavigateToPost(int postId)
    {
        Navigation.NavigateTo($"/events/{EventId}/discussion/{postId}");
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/events");
    }

    private async Task HandleSearch()
    {
        currentPage = 1;
        await LoadPostsAsync();
    }

    private async Task HandlePageChange(int newPage)
    {
        currentPage = newPage;
        await LoadPostsAsync();
    }

    private async Task HandlePageSizeChange(int newPageSize)
    {
        pageSize = newPageSize;
        currentPage = 1;
        await LoadPostsAsync();
    }

    private async Task EditPost(Post post)
    {
        // TODO: Implement edit modal
        await Task.CompletedTask;
    }

    private async Task TogglePin(Post post)
    {
        if (post.IsPinned)
        {
            await PostService.UnpinAsync(post.Id);
        }
        else
        {
            await PostService.PinAsync(post.Id);
        }
        await LoadPostsAsync();
    }

    private async Task ToggleLock(Post post)
    {
        if (post.IsLocked)
        {
            await PostService.UnlockAsync(post.Id);
        }
        else
        {
            await PostService.LockAsync(post.Id);
        }
        await LoadPostsAsync();
    }

    private async Task DeletePost(Post post)
    {
        await PostService.SoftDeleteAsync(post.Id);
        await LoadPostsAsync();
    }
}
