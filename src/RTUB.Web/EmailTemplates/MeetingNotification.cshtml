@model RTUB.Web.EmailTemplates.Models.MeetingNotificationModel
@{
    Layout = "~/EmailTemplates/_EmailLayout.cshtml";
    ViewData["Preheader"] = "Nova reuni√£o agendada.";
    ViewData["PreferencesLink"] = Model.PreferencesLink;
}

@{
    var displayName = !string.IsNullOrEmpty(Model.FullName) 
        ? $"{Model.Nickname} ({Model.FullName})" 
        : Model.Nickname;
}

<h1 style="margin: 0 0 16px 0; padding: 0; font-size: 28px; line-height: 1.3; font-weight: 600; color: #0B0B0F;">
    Nova Reuni√£o
</h1>

<p style="margin: 0 0 16px 0; font-size: 16px; line-height: 1.5; color: #333333;">
    Ol√°, @Html.Raw(displayName)!
</p>

<p style="margin: 0 0 16px 0; font-size: 16px; line-height: 1.5; color: #333333;">
    Foi agendada uma nova reuni√£o:
</p>

<h2 style="margin: 0 0 12px 0; padding: 0; font-size: 22px; line-height: 1.3; font-weight: 600; color: #0B0B0F;">
    @Html.Raw(Model.MeetingTitle)
</h2>

<!-- Meeting Details -->
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" class="event-meta" style="background-color: #F7F7FB; padding: 16px 24px; border-radius: 8px; margin: 16px 0;">
    <tr>
        <td>
            <p class="event-meta-item" style="font-size: 16px; line-height: 1.6; color: #333333; margin: 4px 0;">
                <span class="emoji-icon" style="display: inline-block; margin-right: 8px;">üìã</span>
                <strong>Tipo:</strong> @Html.Raw(Model.MeetingType)
            </p>
            <p class="event-meta-item" style="font-size: 16px; line-height: 1.6; color: #333333; margin: 4px 0;">
                <span class="emoji-icon" style="display: inline-block; margin-right: 8px;">üìÖ</span>
                <strong>Data:</strong> @Html.Raw(Model.DateFormatted)
            </p>
            @if (!string.IsNullOrEmpty(Model.Location))
            {
                <p class="event-meta-item" style="font-size: 16px; line-height: 1.6; color: #333333; margin: 4px 0;">
                    <span class="emoji-icon" style="display: inline-block; margin-right: 8px;">üìç</span>
                    <strong>Local:</strong> @Html.Raw(Model.Location)
                </p>
            }
        </td>
    </tr>
</table>

@if (!string.IsNullOrEmpty(Model.Statement))
{
    <div style="margin: 16px 0; padding: 16px; background-color: #F7F7FB; border-left: 4px solid #6E56CF; border-radius: 4px;">
        <p style="margin: 0 0 8px 0; font-size: 14px; font-weight: 600; color: #6E56CF; text-transform: uppercase;">
            Declara√ß√£o
        </p>
        <p style="margin: 0; font-size: 16px; line-height: 1.5; color: #333333; white-space: pre-wrap;">@Html.Raw(Model.Statement)</p>
    </div>
}

<!-- Signature -->
<div style="margin: 32px 0 16px 0; padding-top: 24px; border-top: 1px solid #E0E0E0;">
    <p style="margin: 0; font-size: 14px; line-height: 1.5; color: #666666;">
        <strong>@Html.Raw(Model.SenderCity)</strong><br />
        @Html.Raw(Model.SenderNickname)
    </p>
</div>
