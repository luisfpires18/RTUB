@model RTUB.Web.EmailTemplates.Models.NewRequestNotificationModel
@{
    Layout = "~/EmailTemplates/_EmailLayout.cshtml";
    ViewData["Preheader"] = "Tens um novo pedido pendente.";
}

<h1 style="margin: 0 0 16px 0; padding: 0; font-size: 28px; line-height: 1.3; font-weight: 600; color: #0B0B0F;">
    Novo Pedido de Atuação
</h1>

<p class="meta-text" style="font-size: 14px; color: #6B7280; line-height: 1.5; margin: 0 0 24px 0;">
    Recebido em @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
</p>

<!-- Request Details -->
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 16px 0;">
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Solicitante:</span>
            <span style="color: #333333;">@Html.Raw(Model.RequestName)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Email:</span>
            <span style="color: #333333;">@Html.Raw(Model.RequestEmail)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Telefone:</span>
            <span style="color: #333333;">@Html.Raw(Model.Phone)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Tipo de Evento:</span>
            <span style="color: #333333;">@Html.Raw(Model.EventType)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Data:</span>
            <span style="color: #333333;">@Html.Raw(Model.DateInfo)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0; border-bottom: 1px solid #E5E7EB;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Localização:</span>
            <span style="color: #333333;">@Html.Raw(Model.Location)</span>
        </td>
    </tr>
    <tr>
        <td style="padding: 8px 0;">
            <span style="font-weight: 600; color: #0B0B0F; display: inline-block; min-width: 140px;">Prioridade:</span>
            <span style="color: #333333;">@Html.Raw(Model.Priority)</span>
        </td>
    </tr>
</table>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <h3 style="margin: 24px 0 8px 0; padding: 0; font-size: 18px; line-height: 1.4; font-weight: 600; color: #0B0B0F;">
        Informações Adicionais:
    </h3>
    <p style="margin: 0 0 16px 0; font-size: 16px; line-height: 1.5; color: #333333; white-space: pre-wrap;">@Html.Raw(Model.Message)</p>
}

<!-- Primary CTA Button -->
@await Html.PartialAsync("~/EmailTemplates/Partials/_Button.cshtml", new RTUB.Web.EmailTemplates.Models.ButtonModel
{
    Href = Model.RequestUrl,
    Label = "Abrir pedido",
    BgColor = "#6E56CF",
    TextColor = "#FFFFFF"
})

