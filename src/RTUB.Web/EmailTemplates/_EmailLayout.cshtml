@{
    Layout = null;
    var preheader = ViewData["Preheader"]?.ToString() ?? "";
}
<!DOCTYPE html>
<html lang="pt-PT" xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="x-apple-disable-message-reformatting">
    <meta name="color-scheme" content="light dark">
    <meta name="supported-color-schemes" content="light dark">
    <title>RTUB</title>
    <!--[if mso]>
    <noscript>
        <xml>
            <o:OfficeDocumentSettings>
                <o:PixelsPerInch>96</o:PixelsPerInch>
            </o:OfficeDocumentSettings>
        </xml>
    </noscript>
    <![endif]-->
    <style type="text/css">
        /* Email Base Styles - Design System */
        body {
            margin: 0;
            padding: 0;
            font-family: -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            color: #333333;
            background-color: #F7F7FB;
        }

        .email-wrapper {
            width: 100%;
            background-color: #F7F7FB;
            padding: 0;
            margin: 0;
        }

        .email-container {
            width: 600px;
            max-width: 600px;
            margin: 0 auto;
            background-color: #FFFFFF;
        }

        .preheader {
            display: none;
            max-height: 0;
            max-width: 0;
            opacity: 0;
            overflow: hidden;
            mso-hide: all;
            font-size: 1px;
            line-height: 1px;
        }

        h1 {
            margin: 0 0 16px 0;
            padding: 0;
            font-size: 28px;
            line-height: 1.3;
            font-weight: 600;
            color: #0B0B0F;
        }

        h2 {
            margin: 0 0 12px 0;
            padding: 0;
            font-size: 22px;
            line-height: 1.3;
            font-weight: 600;
            color: #0B0B0F;
        }

        h3 {
            margin: 0 0 8px 0;
            padding: 0;
            font-size: 18px;
            line-height: 1.4;
            font-weight: 600;
            color: #0B0B0F;
        }

        p {
            margin: 0 0 16px 0;
            padding: 0;
            font-size: 16px;
            line-height: 1.5;
            color: #333333;
        }

        a {
            color: #6E56CF;
            text-decoration: underline;
        }

        a:hover {
            color: #5746a8;
        }

        .content-padding {
            padding: 24px 32px;
        }

        .meta-text {
            font-size: 14px;
            color: #6B7280;
            line-height: 1.5;
        }

        .email-header {
            background-color: #FFFFFF;
            border-top: 4px solid #6E56CF;
            padding: 24px 32px;
        }

        .brand-name {
            font-size: 24px;
            font-weight: 700;
            color: #0B0B0F;
            margin: 0;
            padding: 0;
        }

        .brand-tagline {
            font-size: 14px;
            color: #6B7280;
            margin: 4px 0 0 0;
            padding: 0;
        }

        .email-footer {
            background-color: #F7F7FB;
            padding: 24px 32px;
            text-align: center;
        }

        .footer-text {
            font-size: 13px;
            line-height: 1.5;
            color: #6B7280;
            margin: 0 0 8px 0;
        }

        .footer-links a {
            color: #6B7280;
            text-decoration: underline;
            margin: 0 8px;
        }

        .footer-copyright {
            font-size: 12px;
            color: #6B7280;
            margin: 16px 0 0 0;
        }

        .event-meta {
            background-color: #F7F7FB;
            padding: 16px 24px;
            border-radius: 8px;
            margin: 16px 0;
        }

        .event-meta-item {
            font-size: 16px;
            line-height: 1.6;
            color: #333333;
            margin: 4px 0;
        }

        .emoji-icon {
            display: inline-block;
            margin-right: 8px;
        }

        .safety-notice {
            background-color: #FFF8DC;
            border-left: 4px solid #FFA500;
            padding: 12px 16px;
            margin: 24px 0;
            font-size: 14px;
            color: #856404;
        }

        /* Button Styles */
        .button-wrapper {
            margin: 24px 0;
        }

        .button-table {
            border-spacing: 0;
            border-collapse: separate;
            margin: 0 auto;
        }

        .button-td {
            border-radius: 8px;
            background-color: #6E56CF;
            text-align: center;
        }

        .button-link {
            display: inline-block;
            padding: 14px 32px;
            min-height: 44px;
            font-family: -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            font-size: 16px;
            font-weight: 600;
            line-height: 1.2;
            color: #FFFFFF !important;
            text-decoration: none;
            border-radius: 8px;
            background-color: #6E56CF;
            border: none;
        }

        .button-link:hover {
            background-color: #5746a8;
        }

        /* Responsive Styles */
        @@media only screen and (max-width: 600px) {
            .email-container {
                width: 100% !important;
                max-width: 100% !important;
            }

            .content-padding {
                padding: 16px !important;
            }

            .email-header {
                padding: 16px !important;
            }

            .email-footer {
                padding: 16px !important;
            }

            h1 {
                font-size: 24px !important;
            }

            h2 {
                font-size: 20px !important;
            }

            h3 {
                font-size: 16px !important;
            }

            .button-td {
                width: 100% !important;
                display: block !important;
            }

            .button-link {
                width: 100% !important;
                display: block !important;
                padding: 16px 24px !important;
                box-sizing: border-box !important;
            }

            .event-meta {
                padding: 12px 16px !important;
            }

            .footer-links a {
                display: block !important;
                margin: 8px 0 !important;
            }

            .brand-name {
                font-size: 20px !important;
            }

            .brand-tagline {
                font-size: 13px !important;
            }
        }

        /* Dark Mode Support */
        @@media (prefers-color-scheme: dark) {
            body {
                background-color: #1a1a1a !important;
                color: #e5e5e5 !important;
            }

            .email-wrapper {
                background-color: #1a1a1a !important;
            }

            .email-container {
                background-color: #2d2d2d !important;
            }

            h1, h2, h3, .brand-name {
                color: #f5f5f5 !important;
            }

            p, .event-meta-item {
                color: #e5e5e5 !important;
            }

            .meta-text, .brand-tagline, .footer-text, .footer-links a, .footer-copyright {
                color: #a0a0a0 !important;
            }

            .email-header {
                background-color: #2d2d2d !important;
                border-top-color: #8b7dd8 !important;
            }

            .email-footer {
                background-color: #1a1a1a !important;
            }

            .event-meta {
                background-color: #1a1a1a !important;
            }

            a {
                color: #8b7dd8 !important;
            }

            a:hover {
                color: #a294e4 !important;
            }

            .button-td {
                background-color: #8b7dd8 !important;
            }

            .button-link {
                background-color: #8b7dd8 !important;
                color: #ffffff !important;
            }

            .button-link:hover {
                background-color: #a294e4 !important;
            }

            .safety-notice {
                background-color: #3d2f00 !important;
                border-left-color: #ff9800 !important;
                color: #ffc107 !important;
            }
        }
    </style>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; font-size: 16px; line-height: 1.5; color: #333333; background-color: #F7F7FB;">
    @if (!string.IsNullOrEmpty(preheader))
    {
        <div class="preheader" style="display: none; max-height: 0; max-width: 0; opacity: 0; overflow: hidden; mso-hide: all; font-size: 1px; line-height: 1px;">
            @preheader
        </div>
    }
    
    <!-- Email Wrapper -->
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: #F7F7FB;">
        <tr>
            <td align="center" style="padding: 24px 0;">
                <!-- Email Container -->
                <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="600" class="email-container" style="width: 600px; max-width: 600px; background-color: #FFFFFF; margin: 0 auto;">
                    <!-- Header -->
                    <tr>
                        <td>
                            @await Html.PartialAsync("~/EmailTemplates/Partials/_Header.cshtml")
                        </td>
                    </tr>
                    
                    <!-- Content -->
                    <tr>
                        <td class="content-padding" style="padding: 24px 32px;">
                            @RenderBody()
                        </td>
                    </tr>
                    
                    <!-- Footer -->
                    <tr>
                        <td>
                            @await Html.PartialAsync("~/EmailTemplates/Partials/_Footer.cshtml")
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
