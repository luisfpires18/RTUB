@{
    var preferencesLink = ViewData["PreferencesLink"]?.ToString();
}

<!-- Email Footer -->
<table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" class="email-footer" style="background-color: #F7F7FB; padding: 24px 32px;">
    <tr>
        <td align="center">
            @if (!string.IsNullOrEmpty(preferencesLink))
            {
                <!-- Divider -->
                <table role="presentation" border="0" cellpadding="0" cellspacing="0" width="100%" style="margin: 0 0 24px 0;">
                    <tr>
                        <td style="border-top: 1px solid #E5E7EB;"></td>
                    </tr>
                </table>

                <!-- Preferences Link -->
                <p class="meta-text" style="font-size: 14px; color: #6B7280; line-height: 1.5; text-align: center; margin: 0 0 24px 0;">
                    Se não quiseres receber notificações por email, podes <a href="@preferencesLink" style="color: #6E56CF; text-decoration: underline;">alterar as tuas preferências</a> no teu perfil.
                </p>
            }
            
            <p class="footer-text" style="font-size: 13px; line-height: 1.5; color: #6B7280; margin: 0 0 8px 0;">
                <strong>Real Tuna Universitária de Bragança</strong><br>
                Centro académico, Campus, Alameda de Santa Apolónia<br>
                5300-252 Bragança
            </p>
            
            <p class="footer-copyright" style="font-size: 12px; color: #6B7280; margin: 16px 0 0 0;">
                &copy; @DateTime.Now.Year RTUB. Todos os direitos reservados.
            </p>
        </td>
    </tr>
</table>
