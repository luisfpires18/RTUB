@using RTUB.Application.Interfaces
@using RTUB.Core.Entities
@using RTUB.Shared
@inject ILabelService LabelService
@inject ILogger<HistoryContent> Logger
@namespace RTUB.Components.Portal

<!-- Header + Intro -->
<section class="history-header text-center mb-5">
    <div class="portal-section-header justify-content-center">
        <h1 class="portal-section-title">@(titleLabel?.Content ?? "A carregar...")</h1>
        <LabelEditButton CurrentLabel="@titleLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
    </div>
    <div class="portal-section-divider"></div>
    <div class="d-flex justify-content-center align-items-baseline mb-3">
        <h2 class="history-subtitle">@(subtitleLabel?.Content ?? "")</h2>
        <LabelEditButton CurrentLabel="@subtitleLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
    </div>
    @if (introLabel != null)
    {
        <div class="d-flex justify-content-center align-items-start">
            <p class="history-intro-text">@introLabel.Content</p>
            <LabelEditButton CurrentLabel="@introLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
        </div>
    }
</section>

<!-- Missão & Identidade: Merged two-column card -->
<section class="history-mission-identity mb-5">
    <div class="mission-identity-container">
        <div class="mission-identity-column">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="column-header">
                    <i class="bi bi-heart-fill me-2"></i>
                    <h3>@(missionTitleLabel?.Content ?? "")</h3>
                </div>
                <LabelEditButton CurrentLabel="@missionTitleLabel" OnEditClick="@OpenEditModal" />
            </div>
            <div class="d-flex justify-content-between align-items-start">
                <div class="column-content">@(missionContentLabel?.Content ?? "")</div>
                <LabelEditButton CurrentLabel="@missionContentLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
            </div>
        </div>
        <div class="mission-identity-divider"></div>
        <div class="mission-identity-column">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div class="column-header">
                    <i class="bi bi-palette-fill me-2"></i>
                    <h3>@(identityTitleLabel?.Content ?? "")</h3>
                </div>
                <LabelEditButton CurrentLabel="@identityTitleLabel" OnEditClick="@OpenEditModal" />
            </div>
            <div class="d-flex justify-content-between align-items-start">
                <div class="column-content">@(identityContentLabel?.Content ?? "")</div>
                <LabelEditButton CurrentLabel="@identityContentLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
            </div>
        </div>
    </div>
</section>

<!-- Percurso: Timeline -->
<section class="history-timeline mb-5">
    <div class="timeline-card">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div class="timeline-header">
                <i class="bi bi-clock-history me-2"></i>
                <h3>@(journeyTitleLabel?.Content ?? "")</h3>
            </div>
            <LabelEditButton CurrentLabel="@journeyTitleLabel" OnEditClick="@OpenEditModal" />
        </div>
        <div class="d-flex justify-content-between align-items-start">
            <div class="timeline-content">@(journeyContentLabel?.Content ?? "")</div>
            <LabelEditButton CurrentLabel="@journeyContentLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
        </div>
    </div>
</section>

<!-- Mais que Música: Closing callout -->
<section class="history-closing mb-5">
    <div class="closing-callout">
        <div class="closing-content">
            <i class="bi bi-star-fill"></i>
            <div class="closing-text-wrapper">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <h3 class="closing-title">@(moreTitleLabel?.Content ?? "")</h3>
                    <LabelEditButton CurrentLabel="@moreTitleLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
                </div>
                <div class="d-flex justify-content-between align-items-start">
                    <p class="closing-text">@(moreContentLabel?.Content ?? "")</p>
                    <LabelEditButton CurrentLabel="@moreContentLabel" OnEditClick="@OpenEditModal" CssClass="ms-2" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Edit Label Modal (at root level, outside cards) -->
<Modal Show="@showEditModal" 
       ShowChanged="@((value) => showEditModal = value)"
       Title="Editar Conteúdo"
       Size="Modal.ModalSize.Large"
       OnClose="CloseEditModal">
    <BodyContent>
        @if (editingLabel != null)
        {
            <EditForm Model="editingLabel" OnValidSubmit="SaveLabel">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label text-white-full">Referência</label>
                    <input type="text" class="form-control" value="@editingLabel.Reference" disabled />
                    <small class="text-white-opacity">Identificador único (não editável)</small>
                </div>

                <div class="mb-3">
                    <label class="form-label text-white-full">Título</label>
                    <InputText class="form-control" @bind-Value="editingLabel.Title" placeholder="Inserir título..." />
                </div>

                <div class="mb-3">
                    <label class="form-label text-white-full">Conteúdo</label>
                    <InputTextArea class="form-control" rows="10" @bind-Value="editingLabel.Content" 
                                   placeholder="Inserir conteúdo..." />
                    <small class="text-white-opacity">Dica: Use quebras de linha para formatar o texto</small>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEditModal">Cancelar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </EditForm>
        }
    </BodyContent>
</Modal>

@code {
    private Label? titleLabel;
    private Label? subtitleLabel;
    private Label? introLabel;
    private Label? missionTitleLabel;
    private Label? missionContentLabel;
    private Label? identityTitleLabel;
    private Label? identityContentLabel;
    private Label? journeyTitleLabel;
    private Label? journeyContentLabel;
    private Label? moreTitleLabel;
    private Label? moreContentLabel;

    private Label? editingLabel;
    private bool showEditModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadLabels();
    }

    private async Task LoadLabels()
    {
        titleLabel = await LabelService.GetLabelByReferenceAsync("history_title");
        subtitleLabel = await LabelService.GetLabelByReferenceAsync("history_subtitle");
        introLabel = await LabelService.GetLabelByReferenceAsync("history_intro");
        missionTitleLabel = await LabelService.GetLabelByReferenceAsync("history_mission_title");
        missionContentLabel = await LabelService.GetLabelByReferenceAsync("history_mission_content");
        identityTitleLabel = await LabelService.GetLabelByReferenceAsync("history_identity_title");
        identityContentLabel = await LabelService.GetLabelByReferenceAsync("history_identity_content");
        journeyTitleLabel = await LabelService.GetLabelByReferenceAsync("history_journey_title");
        journeyContentLabel = await LabelService.GetLabelByReferenceAsync("history_journey_content");
        moreTitleLabel = await LabelService.GetLabelByReferenceAsync("history_more_title");
        moreContentLabel = await LabelService.GetLabelByReferenceAsync("history_more_content");
    }

    private void OpenEditModal(Label label)
    {
        editingLabel = new Label
        {
            Id = label.Id,
            Reference = label.Reference,
            Title = label.Title,
            Content = label.Content,
            IsActive = label.IsActive
        };
        showEditModal = true;
    }

    private void CloseEditModal()
    {
        showEditModal = false;
        editingLabel = null;
    }

    private async Task SaveLabel()
    {
        if (editingLabel == null) return;

        try
        {
            await LabelService.UpdateLabelContentAsync(
                editingLabel.Id,
                editingLabel.Title,
                editingLabel.Content
            );

            await LoadLabels();
            
            showEditModal = false;
            editingLabel = null;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error updating label");
        }
    }
}

